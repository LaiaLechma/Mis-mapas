<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.laialechma.mismapas.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 4 lugares más concurridos de Cataluña"
        android:textAppearance="@color/accent_material_light"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="18dp"
        android:textStyle="bold" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btSagradaFamilia"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:onClick="irSagradaFamilia"
        android:background="@drawable/sagradafamilia"
        android:text="@string/ir_SagradaFamilia"/>



    <ImageButton
        android:id="@+id/btBorn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:onClick="irBorn"
        android:background="@drawable/born"
        android:text="@string/ir_Born"/>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btRambla"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:onClick="irRambla"
            android:background="@drawable/rambla"
            android:text="@string/ir_Rambla"/>



        <ImageButton
            android:id="@+id/btMontserrat"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:onClick="irMontserrat"
            android:text="@string/ir_Montserrat"
            android:background="@drawable/montserrat" />
        </LinearLayout>


    </LinearLayout>


